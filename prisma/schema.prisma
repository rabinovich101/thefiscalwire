generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id        String    @id @default(uuid())
  name      String
  avatar    String?
  bio       String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]
}

model Category {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  color     String    @default("bg-gray-600")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Primary articles (where this is the main category)
  primaryArticles  Article[] @relation("PrimaryCategory")

  // All articles in this category (many-to-many)
  articles         Article[] @relation("ArticleCategories")

  // Page definitions for this category
  pageDefinitions  PageDefinition[]
}

model Tag {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]
}

model Article {
  id               String    @id @default(uuid())
  slug             String    @unique
  title            String
  excerpt          String
  content          Json      // Stores ArticleContentBlock[]
  imageUrl         String
  publishedAt      DateTime  @default(now())
  readTime         Int
  isFeatured       Boolean   @default(false)
  isBreaking       Boolean   @default(false)

  // Table of contents headings
  headings         Json?     // Stores ArticleHeading[]

  // External source tracking (for imported articles)
  externalId       String?   @unique  // newsdata.io article_id for deduplication
  sourceUrl        String?            // Original article URL

  // AI-enhanced content fields
  metaDescription  String?            // SEO meta description
  seoKeywords      String[]  @default([])  // AI-generated keywords
  isAiEnhanced     Boolean   @default(false) // Track if AI-processed

  // Related data
  relevantTickers  String[]  @default([])

  // Relations
  authorId         String
  author           Author    @relation(fields: [authorId], references: [id])

  // Primary category (for backward compatibility and main display)
  categoryId       String
  category         Category  @relation("PrimaryCategory", fields: [categoryId], references: [id])

  // Multiple categories (article can appear in multiple category pages)
  categories       Category[] @relation("ArticleCategories")

  tags             Tag[]

  // Related articles (self-referential many-to-many)
  relatedTo        Article[] @relation("RelatedArticles")
  relatedFrom      Article[] @relation("RelatedArticles")

  // AI Analysis relation
  analysis         ArticleAnalysis?

  // Page builder placements
  placements       ContentPlacement[]

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([slug])
  @@index([categoryId])
  @@index([authorId])
  @@index([publishedAt])
}

model MarketIndex {
  id            String   @id @default(uuid())
  symbol        String   @unique
  name          String
  price         Float
  change        Float
  changePercent Float
  updatedAt     DateTime @updatedAt
}

model Video {
  id        String   @id @default(uuid())
  title     String
  thumbnail String
  duration  String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Page builder placements
  placements ContentPlacement[]
}

model BreakingNews {
  id       String  @id @default(uuid())
  isActive Boolean @default(true)
  headline String
  url      String
}

// ============ Authentication Models ============

enum Role {
  USER
  ADMIN
}

model User {
  id            String    @id @default(uuid())
  name          String?
  firstName     String?
  lastName      String?
  username      String?   @unique
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  phoneNumber   String?
  dateOfBirth   DateTime?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]

  // Page builder placements created by this user
  contentPlacements ContentPlacement[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============ Activity Logging Models ============

enum ActivityType {
  IMPORT            // Article import from NewsData.io
  PERPLEXITY_API    // Perplexity AI API usage
  NEWS_API          // NewsData.io API call
  ARTICLE_ANALYSIS  // AI article analysis
  ERROR             // Any error in automation
  SYSTEM            // System events
}

enum ActivityStatus {
  SUCCESS
  ERROR
  WARNING
  INFO
}

model ActivityLog {
  id        String         @id @default(uuid())
  type      ActivityType
  action    String         // Short description of what happened
  details   Json?          // Flexible JSON for additional data
  count     Int?           // Number of items affected (e.g., articles imported)
  status    ActivityStatus
  errorMessage String?     // Error message if status is ERROR
  createdAt DateTime       @default(now())

  @@index([type])
  @@index([status])
  @@index([createdAt])
}

// ============ AI Article Analysis ============

model ArticleAnalysis {
  id            String   @id @default(uuid())
  articleId     String   @unique
  article       Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)

  // Market Classification
  markets       String[] @default([]) // ["US", "Europe", "Asia", "Crypto", "Forex"]

  // Sector Classification (aligned with existing 11 sectors)
  primarySector    String?   // e.g., "technology"
  secondarySectors String[]  @default([]) // e.g., ["healthcare", "financial"]

  // Sub-sector/Industry
  subSectors    String[] @default([]) // e.g., ["semiconductors", "cloud computing"]
  industries    String[] @default([]) // e.g., ["artificial intelligence", "data centers"]

  // Stock Analysis
  primaryStock    String?   // Main stock the article is about
  mentionedStocks String[]  @default([]) // All mentioned stocks
  competitors     Json?     // { "NVDA": ["AMD", "INTC"] }

  // Business Classification
  businessType    String?   // "earnings", "merger", "product_launch", etc.
  sentiment       String?   // "bullish", "bearish", "neutral"
  impactLevel     String?   // "high", "medium", "low"

  // AI Metadata
  aiModel         String    // "sonar"
  confidence      Float?    // AI confidence score (0-1)
  rawResponse     Json?     // Full AI response for debugging

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([primarySector])
  @@index([primaryStock])
  @@index([sentiment])
  @@index([businessType])
}

// ============ Page Builder Models ============

enum PageType {
  HOMEPAGE
  CATEGORY
  STOCK
  CUSTOM
  STATIC
  MARKETS
}

enum ZoneType {
  HERO_FEATURED       // Large featured article
  HERO_SECONDARY      // Secondary articles next to hero
  ARTICLE_GRID        // Grid of article cards
  ARTICLE_LIST        // Vertical list of articles
  TRENDING_SIDEBAR    // Numbered trending list
  BREAKING_BANNER     // Breaking news banner
  MARKET_TICKER       // Stock ticker
  MARKET_MOVERS       // Top gainers/losers
  VIDEO_CAROUSEL      // Video slider
  CATEGORY_NAV        // Category navigation
  CUSTOM_HTML         // Custom HTML/embed
  STOCK_CHART         // Stock chart widget
  STOCK_NEWS          // Stock-related news
}

enum ContentType {
  ARTICLE
  VIDEO
  CUSTOM
  AUTO  // Filled by auto-fill rules
}

// Represents a page that can have managed layouts
model PageDefinition {
  id          String   @id @default(uuid())
  name        String   // "Homepage", "Category: US Markets", "Stock: AAPL"
  slug        String   @unique // "homepage", "category-us-markets", "stock-aapl"
  pageType    PageType

  // For dynamic pages, store the reference
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  stockSymbol String?  // For stock pages

  // Layout configuration
  layoutId    String?
  layout      LayoutTemplate? @relation(fields: [layoutId], references: [id])

  // Status
  isActive    Boolean  @default(true)

  // Zones on this page
  zones       PageZone[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([pageType])
  @@index([slug])
}

// Layout templates define zone arrangements
model LayoutTemplate {
  id          String   @id @default(uuid())
  name        String   // "Homepage Default", "Category Grid", "Stock Focus"
  description String?

  // JSON configuration for grid layout
  gridConfig  Json     // { "columns": 12, "rows": "auto", "areas": [...] }

  // Preview thumbnail
  thumbnail   String?

  pages       PageDefinition[]
  zones       ZoneDefinition[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Zone definitions (templates for zones that can appear on pages)
model ZoneDefinition {
  id            String   @id @default(uuid())
  name          String   // "Hero Featured", "Top Stories Grid", "Trending Sidebar"
  slug          String   @unique // "hero-featured", "top-stories-grid"
  description   String?

  // Zone type determines rendering component
  zoneType      ZoneType

  // Layout position (CSS Grid area name or position)
  gridArea      String?  // e.g., "hero", "main-left", "sidebar-right"

  // Content constraints
  minItems      Int      @default(1)
  maxItems      Int      @default(10)

  // Default auto-fill rules (JSON)
  defaultRules  Json?    // { "source": "latest", "category": "us-markets", "limit": 6 }

  // Which layouts this zone belongs to
  layoutId      String?
  layout        LayoutTemplate? @relation(fields: [layoutId], references: [id])

  // Instances of this zone on pages
  pageZones     PageZone[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Actual zone instance on a specific page
model PageZone {
  id              String   @id @default(uuid())

  // Which page this zone is on
  pageId          String
  page            PageDefinition @relation(fields: [pageId], references: [id], onDelete: Cascade)

  // Zone definition (template)
  zoneDefinitionId String
  zoneDefinition   ZoneDefinition @relation(fields: [zoneDefinitionId], references: [id])

  // Override settings for this instance
  customName      String?  // Override display name
  isEnabled       Boolean  @default(true)

  // Display order within the page
  sortOrder       Int      @default(0)

  // Auto-fill rules (overrides zone definition defaults)
  autoFillRules   Json?

  // Content placements in this zone
  placements      ContentPlacement[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([pageId, zoneDefinitionId])
  @@index([pageId])
}

// Content placed in a specific zone
model ContentPlacement {
  id            String   @id @default(uuid())

  // Which zone this placement is in
  zoneId        String
  zone          PageZone @relation(fields: [zoneId], references: [id], onDelete: Cascade)

  // Content reference (polymorphic)
  contentType   ContentType
  articleId     String?
  article       Article? @relation(fields: [articleId], references: [id], onDelete: Cascade)
  videoId       String?
  video         Video?   @relation(fields: [videoId], references: [id], onDelete: Cascade)
  customContent Json?    // For custom HTML/widgets

  // Placement position within zone
  position      Int      @default(0)

  // Pinned content doesn't get replaced by auto-fill
  isPinned      Boolean  @default(false)

  // Scheduling
  startDate     DateTime?
  endDate       DateTime?

  // Created by
  createdById   String?
  createdBy     User?    @relation(fields: [createdById], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([zoneId, position])
  @@index([zoneId])
  @@index([articleId])
}

// Auto-fill rules configuration (reusable rules)
model AutoFillRule {
  id            String   @id @default(uuid())
  name          String   // "Latest US Markets", "Featured Crypto"
  description   String?

  // Rule configuration (JSON)
  config        Json     // { source, filters, sort, limit }

  isActive      Boolean  @default(true)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
